{
  "builders": [
    {
      "boot_command": [
        "<esc>",
        "<wait>",
        "linux inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-7.9/anaconda-ks.cfg biosdevname=0 net.ifnames=0",
        "<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "RedHat_64",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "{{user `mirror`}}/CentOS-7-x86_64-NetInstall-2009.iso",
      "output_directory": "E:/packer/output-centos-7.9-x86_64-{{build_type}}",
      "shutdown_command": "sudo systemctl poweroff",
      "ssh_password": "xianghua",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "root",
      "type": "virtualbox-iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ],
      "vm_name": "packer-centos-7.9-x86_64"
    }
  ],
  "post-processors": [
    {
      "compression_level": "{{user `compression_level`}}",
      "output": "E:/packer/boxes/centos-7.9-x86_64-{{.Provider}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/centos-7.9/repo.sh",
        "scripts/centos/virtualbox.sh",
        "scripts/common/vagrant.sh",
        "scripts/common/sshd.sh",
        "scripts/common/install_common_tools.sh",
        "scripts/centos/locale.sh",
        "scripts/centos-7.9/cleanup.sh"
      ],
      "type": "shell"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/site.yml",
      "playbook_dir": "ansible/"
    }
  ],
  "variables": {
    "compression_level": "9",
    "cpus": "2",
    "disk_size": "40000",
    "headless": "false",
    "iso_checksum": "b79079ad71cc3c5ceb3561fff348a1b67ee37f71f4cddfec09480d4589c191d6",
    "iso_checksum_type": "sha256",
    "memory": "2048",
    "mirror": "file:///E:/iso/centos",
    "ssh_timeout": "10m"
  }
}
